<launch>

  <!-- Start Azure Kinect Camera node -->
  <group ns="azure_kinect">
    <node name="azure_kinect_node" pkg="Azure_Kinect_Ros_Driver" type="Azure_Kinect_Ros_Driver" output="screen">
      <param name="device_id" type="int" value="0" />
      <param name="fps_limit" type="int" value="30" />
      <param name="depth_mode" type="int" value="2" />
      <param name="color_resolution" type="int" value="2" />
      <param name="point_cloud" type="bool" value="false" />
    </node>
  </group>

  <!-- Start ORB_SLAM3 node -->
    <node name="orb_slam3" pkg="ORB_SLAM3" type="ORB_SLAM3" output="screen">
    <param name="camera_topic" type="string" value="/azure_kinect/color/image_raw" />
    <param name="camera_info_topic" type="string" value="/azure_kinect/color/camera_info" />
    <param name="depth_topic" type="string" value="/azure_kinect/depth_to_color/image_raw" />
    <param name="depth_info_topic" type="string" value="/azure_kinect/depth_to_color/camera_info" />
    <param name="frame_id" type="string" value="camera_link" />
    <param name="publish_pointcloud" type="bool" value="false" />
    <param name="pointcloud_topic" type="string" value="/orb_slam3/pointcloud" />
    <param name="publish_pose" type="bool" value="true" />
    <param name="pose_topic" type="string" value="/orb_slam3/pose" />
    <param name="vocab_file" value="$(find ORB_SLAM3)/Vocabulary/ORBvoc.txt" />
    <param name="settings_file" value="$(find ORB_SLAM3)/Examples/Monocular/your_settings_file.yaml" />
    <remap from="camera/image_raw" to="/camera/image_raw" />
  </node>




</launch>

